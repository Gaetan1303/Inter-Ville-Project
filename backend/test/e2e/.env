# Configuration pour les tests E2E
NODE_ENV=test

# Base de données de test (séparée de la DB de dev)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=cdpi_test
DB_USER=cdpi_test_user
DB_PASSWORD=cdpi_test_pwd

# JWT (tokens de courte durée pour tests)
JWT_SECRET=test_secret_key_for_e2e_testing_only
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=7d

# CORS
FRONTEND_URL=http://localhost:3000

# Email (Mock - pas besoin de SMTP réel)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=test@laplateforme.io

# Uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg

# Admin
ADMIN_EMAIL=admin@laplateforme.io

# Rate limiting (config test - plus permissive)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100